<div class="panel panel-default">
<div class="row">
{{#each jobs as |job|}}
  <div class='list-group col-md-6 col-md-offset-3'>
      <div class="row">
     <a href="#" class="list-group-item">
    <div class='name-and-company col-md-3 col-md-offset-3' >
      {{#link-to 'job' job}}
        {{job.title}}
      {{/link-to}}
      at {{job.company.name}}
    </div>
    <div class='location col-md-3'>
      {{job.location.city}}
    </div>
    <div class='col-md-3'>
      Posted: {{job.postedAt}}
    
    
      {{#link-to 'job' job}}
      
        <span class='glyphicon glyphicon-triangle-right' aria-hidden="true"></span>
      
      {{/link-to}}
    </div>
    </a>
    </div>
  </div>
{{/each}}
</div>
</div>