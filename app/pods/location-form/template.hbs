<<h1>Location</h1>
<form>
<div class="form-group">
<label for="address">
  Address</label>
  {{input class="form-control" id="address" value=location.address placeholder="Enter address"}}
</div>
<div class="form-group">
<label for="location">
  Location</label>
  {{input value=location.city class="form-control" id="location" placeholder="Enter location"}}
</div>
<div class="form-group">
<label for="state">
  State</label>
  {{input value=location.state class="form-control" id="state" placeholder="Enter state"}}
</div>
<div class="form-group">
<label for="zipcode">
  Zipcode</label>
  {{input value=job.description class="form-control" id="state" placeholder="Enter zipcode"}}
</div>

<button id="save"
        {{action "save"}}
        disabled={{isSaving}} class="btn btn-default">
  {{#if isSaving}}
    Saving
  {{else}}
    Save
  {{/if}}
</button>
</form>